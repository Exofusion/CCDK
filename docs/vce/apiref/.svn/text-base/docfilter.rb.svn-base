if( ARGV.size < 3 ) then
  print "Usage: ruby docfilter.rb FROM TO FN FN FN FN ...\n"
  exit 0
end

from = ARGV.shift
to = ARGV.shift

ARGV.each { |fn|
  f = File.open(fn)
  lines = f.read.split("\n")
  f.close

  lines.each { |line|
    line.gsub!( from, to )
  }

  f = File.open(fn,"w")
  lines.each { |line|
    f.print line, "\n"
  }
  f.close
}
